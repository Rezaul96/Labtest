    <!--Font-Awesome-->
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!--Font-Awesome-->
    @RenderSection("Head", required: false)
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->

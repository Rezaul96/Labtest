@using System.Web
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@{
    JObject user = null;
    var cookie = ViewContext.HttpContext.Request.Cookies["user"];
    if (cookie != null)
    {
        user = JsonConvert.DeserializeObject<JObject>(HttpUtility.UrlDecode(cookie));
    }

    var photo = user?["Photo"];
    var imageFullPath = user?["ImageFullPath"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LabTest.com</title>


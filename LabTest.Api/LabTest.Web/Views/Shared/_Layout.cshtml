    <link rel="stylesheet" href="~/lib/Admin_theme/vendors/css/vendor.bundle.addons.css">
    <link rel="stylesheet" href="~/lib/Admin_theme/css/custom-style.css" type="text/css" />
    <!-- endinject -->
    <!-- plugin css for this page -->

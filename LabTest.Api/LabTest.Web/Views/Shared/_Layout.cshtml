                    <div class="content-wrapper">
                        @RenderBody()
                    </div>
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <footer class="footer">
                    <div class="container-fluid clearfix">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">
                            Copyright © 2019
                            <a href="" target="_blank"> LabTest.</a>. All rights reserved.
                        </span>

                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <!-- plugins:js -->
    <script src="~/lib/Admin_theme/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/lib/Admin_theme/vendors/js/vendor.bundle.addons.js"></script>
    <!-- endinject -->

                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->





        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <div class="nav-link">
                            <div class="user-wrapper">
                                <div class="profile-image">
                                    @if (photo != null)
                                    {
                                        <img src="@imageFullPath" alt="profile image">
                                    }
                                    else
                                    {
                                        <img src="~/lib/Admin_theme/images/faces/face0.png" />
                                    }

                                </div>
                                <div class="text-wrapper">
                                    <p class="profile-name">@(user?["FullName"])</p>
                                    <div>
                                        <small class="designation text-muted">@(user?["UserType"])</small>
                                        <span class="status-indicator online"></span>
                                    </div>
                                </div>
                            </div>
                            @*<button class="btn btn-success btn-block">
                                    New Project
                                    <i class="mdi mdi-plus"></i>
                                </button>*@
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="menu-icon mdi mdi-television"></i>
                            <span class="menu-title"><strong>Dashboard</strong></span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Registration/Index">
                            <i class="menu-icon mdi mdi-television"></i>
                            <span class="menu-title"><strong>Registration</strong></span>
                        </a>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link" href="~/SupplierInfo/Index">
                            <i class="menu-icon mdi mdi-television"></i>
                            <span class="menu-title"><strong>Task</strong></span>
                        </a>
                    </li>
              
                </ul>
            </nav>
            <!-- partial -->

            <div class="main-panel">
